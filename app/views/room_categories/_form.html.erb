<%= form_for @room_category, :html => { :class => "form-horizontal room_category" } do |f| %>

  <% if @room_category.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@room_category.errors.count, "error") %> prohibited this room_category from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @room_category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :room_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :room_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:room_id) %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :category_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:category_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                room_categories_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
